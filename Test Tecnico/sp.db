-- Crear el procedimiento almacenado
CREATE PROCEDURE CalcularVentasPorRegionYTipoProducto
AS
BEGIN
    -- Seleccionar las ventas totales por regi√≥n
    SELECT Region,
           SUM(Hardware) AS TotalHardwarePorRegion,
           SUM(Software) AS TotalSoftwarePorRegion,
           SUM(Services) AS TotalServicesPorRegion
    FROM Ventas
    GROUP BY Region;

    -- Seleccionar las ventas totales por tipo de producto
    SELECT TipoProducto,
           SUM(Hardware) AS TotalHardwarePorTipo,
           SUM(Software) AS TotalSoftwarePorTipo,
           SUM(Services) AS TotalServicesPorTipo
    FROM Ventas
    GROUP BY TipoProducto;
END
